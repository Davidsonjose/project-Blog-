<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/nav.ejs') %>



        <div class="container bg-light mt-3">  
            <div class="row">
                <div class="col-md-6 offset-md-6 text-right d-flex ">
                    <a href="/post/create" class="btn btn-outline-warning shadow">Edit post</a>
                    <form
                    class="form-inline"
                     action="<% server_url %>/post/delete/<%= post.id %>?_method=DELETE"
                     method="POST">
                     <button class=" btn btn-danger" type="submit"> Delete Post</button>
                    </form>
                </div>
            </div>
            <div>
                <h2 class="display-4"><%=post.title %></h2>
                 <div class="w-75">
                       <p class="lead"><%=post.description%></p>
                    <img 
                    src="<%= server_url %><%= post.image %>" 
                    alt="<%= post.title %>" class="image-fluid" />
                 </div>
                 
            </div>
            <marquee behavior="" direction=""></marquee>
        </div>
</body>
</html>